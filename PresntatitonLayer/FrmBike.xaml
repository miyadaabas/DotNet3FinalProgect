                    <Label x:Name="lblName" Content="Name"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Label x:Name="lblType" Content="Type"/>
                </Grid>
                <Grid Grid.Row="2">
                    <Label x:Name="lblPrice" Content="Price"/>
                </Grid>
                <Grid Grid.Row="3">
                    <Label x:Name="lblQuality" Content="Quality"/>
                </Grid>
                <Grid Grid.Row="4">
                    <Label x:Name="lblModel" Content="Model"/>
                </Grid>
                <Grid Grid.Row="5">
                    <Label x:Name="lblTotal" Content="Total"/>
                </Grid>
                <Grid Grid.Row="6"></Grid>
                <Grid Grid.Row="7"></Grid>
                <Grid Grid.Row="8"></Grid>
                <Grid Grid.Row="9"></Grid>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBox x:Name="txtName"/>
                </Grid>
                <Grid Grid.Row="1">
                    <TextBox x:Name="txtType"/>
                </Grid>
                <Grid Grid.Row="2">
                    <TextBox x:Name="txtPrice"/>
                </Grid>
                <Grid Grid.Row="3">
                    <TextBox x:Name="txtQuality"/>
                </Grid>
                <Grid Grid.Row="4">
                    <TextBox x:Name="txtModel"/>
                </Grid>
                <Grid Grid.Row="5">
                    <TextBox x:Name="txtTotal"/>
                </Grid>
                <Grid Grid.Row="6"></Grid>
                <Grid Grid.Row="7"></Grid>
                <Grid Grid.Row="8"></Grid>
                <Grid Grid.Row="9"></Grid>
            </Grid>
            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
